doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title= StackState
    meta(name='viewport' content='width=device-width, initial-scale=1')
  body
    div(id="app")
    each chunk in Array.from(new Set(htmlWebpackPlugin.files.chunks.values))
      script(src=chunk.entry)

    if htmlWebpackPlugin.options.devServer
      script(src=htmlWebpackPlugin.options.devServer + '/webpack-dev-server.js')